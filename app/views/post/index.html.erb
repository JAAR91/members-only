<div class="container">
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
            <% if user_signed_in? %>
            <div class="container border border-3 rounded py-2 my-1 bg-light text-center">
                <%= link_to "New post", new_user_post_path(current_user.id), class:'link-success text-decoration-none text-uppercase' %>
            </div>
            <%end%>  
            <% @post.each do |post| %>
                <div class="border border-3 rounded p-4 bg-light my-1">
                    <div class="shadown m-1 d-flex border-bottom">
                        <% if user_signed_in? %>
                            <%= link_to post.title, user_post_path(current_user.id, post.id), class:'text-uppercase link-info text-decoration-none text-break' %></li>
                        <%else%>
                            <p class="text-uppercase"><%= post.title %></p>
                        <%end%>
                        <p class="text-black-50 mx-2"><%= post.created_at %></p>
                    </div>
                    <div class="container shadown">
                            <p class="text-break"><%= post.body %></p>
                    </div>
                    <% if user_signed_in? %>
                        <p class="shadown ms-auto text-end">
                        by <%= post.user.email %>
                        </p>
                    <% end %>  
                </div>
            <% end %>
        </div>
        <div class="col-3">

        </div>
    </div>
</div>
