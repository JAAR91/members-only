<div class="container">
    <div class="row">
        <div class="col">

        </div>
        <div class="col">
          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded' %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <br />
              <%= f.password_field :password, autocomplete: "new-password", class:'rounded' %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'rounded' %>
            </div>

            <div class="actions my-2">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
        <div class="col">

        </div>
    </div>
</div>
